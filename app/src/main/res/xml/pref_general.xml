<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/general">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="autoCopyPaste"
            android:title="@string/automatic_copy_paste" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/download">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="autoDownload"
            android:title="@string/automatic_download" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="downloadManager"
            android:title="@string/use_built_in_download_manager" />
    </PreferenceCategory>
</PreferenceScreen>
